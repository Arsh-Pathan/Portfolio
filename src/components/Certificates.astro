---
const certificates = [
  {
    title: "Outlook Certificate",
    issuer: "Bootcamp Program",
    description:
      "Completed comprehensive bootcamp in Agentic AI and Generative AI",
    date: "2024",
    icon: "üèÜ",
  },
];
---

<section
  id="certificates"
  class="section certificates-section relative overflow-hidden"
>
  <div class="container relative z-10">
    <div class="text-center mb-16">
      <div class="section-label justify-center flex">Recognition</div>
      <h2 class="section-title">
        Certificates & <span class="gradient-text">Achievements</span>
      </h2>
    </div>

    <div class="certificates-grid">
      {
        certificates.map((cert, index) => (
          <div class="certificate-card glass" data-cert={index}>
            <div class="cert-glow-line" />

            <div class="cert-icon-wrap">
              <span class="text-5xl">{cert.icon}</span>
            </div>

            <div class="cert-body">
              <h3 class="cert-title">{cert.title}</h3>
              <p class="cert-issuer">{cert.issuer}</p>
              <p class="cert-desc">{cert.description}</p>
              <span class="cert-date">{cert.date}</span>
            </div>

            <button class="view-cert-btn btn btn-outline mt-6">
              View Certificate
            </button>

            <div class="cert-shine" />
          </div>
        ))
      }

      <div class="placeholder-card glass">
        <div class="placeholder-icon">
          <span class="text-5xl opacity-40">üìú</span>
        </div>
        <p class="text-gray-500 mt-4 font-medium">
          More achievements coming soon...
        </p>
      </div>
    </div>
  </div>
</section>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener("DOMContentLoaded", () => {
    gsap.from(".certificates-section .section-label", {
      scrollTrigger: { trigger: ".certificates-section", start: "top 80%" },
      y: 30,
      opacity: 0,
      filter: "blur(8px)",
      duration: 0.8,
      ease: "power3.out",
    });

    gsap.from(".certificates-section .section-title", {
      scrollTrigger: { trigger: ".certificates-section", start: "top 80%" },
      y: 40,
      opacity: 0,
      filter: "blur(10px)",
      duration: 1,
      delay: 0.15,
      ease: "power3.out",
    });

    const cards = document.querySelectorAll(
      ".certificate-card, .placeholder-card",
    );
    cards.forEach((card, index) => {
      gsap.from(card, {
        scrollTrigger: {
          trigger: card,
          start: "top 85%",
          toggleActions: "play none none reverse",
        },
        scale: 0.85,
        opacity: 0,
        rotateY: 15,
        filter: "blur(6px)",
        duration: 0.9,
        delay: index * 0.15,
        ease: "power3.out",
      });
    });

    document.querySelectorAll(".view-cert-btn").forEach((btn) => {
      btn.addEventListener("click", () => {
        gsap.to(btn, { scale: 0.92, duration: 0.1, yoyo: true, repeat: 1 });
      });
    });
  });
</script>

<style>
  .certificates-section {
    background: #0a0f1c;
    padding: 8rem 0;
  }

  .certificates-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    max-width: 900px;
    margin: 0 auto;
  }

  .certificate-card,
  .placeholder-card {
    padding: 2.5rem;
    position: relative;
    overflow: hidden;
    text-align: center;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .certificate-card:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow:
      0 30px 60px rgba(0, 0, 0, 0.4),
      0 0 50px rgba(59, 130, 246, 0.1);
  }

  .cert-glow-line {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, #3b82f6, #06b6d4, #818cf8, #3b82f6);
    background-size: 300% 100%;
    animation: glow-line-shift 4s linear infinite;
    box-shadow: 0 0 15px rgba(59, 130, 246, 0.4);
  }

  @keyframes glow-line-shift {
    0% {
      background-position: 0% 50%;
    }
    100% {
      background-position: 300% 50%;
    }
  }

  .cert-icon-wrap {
    margin: 1.5rem 0;
    filter: drop-shadow(0 0 20px rgba(59, 130, 246, 0.3));
  }

  .cert-title {
    font-size: 1.6rem;
    font-weight: 800;
    margin-bottom: 0.5rem;
    background: linear-gradient(135deg, #60a5fa, #06b6d4);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .cert-issuer {
    font-size: 1rem;
    color: #06b6d4;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .cert-desc {
    color: #7a8ba8;
    margin-bottom: 0.75rem;
    line-height: 1.6;
    font-size: 0.9rem;
  }

  .cert-date {
    color: #5a6d8a;
    font-size: 0.8rem;
    font-weight: 600;
    letter-spacing: 0.05em;
  }

  .cert-shine {
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(
      45deg,
      transparent,
      rgba(59, 130, 246, 0.05),
      transparent
    );
    transform: rotate(45deg);
    animation: cert-shine 5s infinite;
    pointer-events: none;
  }

  @keyframes cert-shine {
    0% {
      transform: translateX(-100%) translateY(-100%) rotate(45deg);
    }
    100% {
      transform: translateX(100%) translateY(100%) rotate(45deg);
    }
  }

  .placeholder-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 350px;
    border: 2px dashed rgba(59, 130, 246, 0.1);
    background: transparent;
  }

  @media (max-width: 768px) {
    .certificates-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
