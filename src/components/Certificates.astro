---
// Certificates Section
const certificates = [
    {
        title: "Outlook Certificate",
        issuer: "Bootcamp Program",
        description:
            "Completed comprehensive bootcamp in Agentic AI and Generative AI",
        date: "2024",
        icon: "üèÜ",
    },
];
---

<section id="certificates" class="section relative">
    <div class="container">
        <h2 class="section-title">Certificates & Achievements</h2>

        <div class="certificates-grid">
            {
                certificates.map((cert, index) => (
                    <div class="certificate-card glass" data-cert={index}>
                        <div class="cert-decoration" />

                        <div class="cert-icon">
                            <span class="text-6xl">{cert.icon}</span>
                        </div>

                        <div class="cert-content">
                            <h3 class="text-3xl font-bold mb-3 gradient-text">
                                {cert.title}
                            </h3>
                            <p class="text-xl text-accent-cyan mb-2">
                                {cert.issuer}
                            </p>
                            <p class="text-gray-300 mb-4">{cert.description}</p>
                            <p class="text-gray-400">{cert.date}</p>
                        </div>

                        <button class="view-cert-btn btn btn-primary mt-6">
                            View Certificate
                        </button>

                        <div class="cert-shine" />
                    </div>
                ))
            }

            <!-- Placeholder for more certificates -->
            <div class="certificate-placeholder glass">
                <div class="placeholder-icon">
                    <span class="text-6xl">üìú</span>
                </div>
                <p class="text-xl text-gray-400 mt-4">
                    More achievements coming soon...
                </p>
            </div>
        </div>
    </div>

    <!-- Curved Divider Bottom -->
    <div class="custom-shape-divider-bottom">
        <svg
            data-name="Layer 1"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 1200 120"
            preserveAspectRatio="none"
        >
            <path
                d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z"
                class="shape-fill"></path>
        </svg>
    </div>
</section>

<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    document.addEventListener("DOMContentLoaded", () => {
        const certCards = document.querySelectorAll(
            ".certificate-card, .certificate-placeholder",
        );

        certCards.forEach((card, index) => {
            gsap.from(card, {
                scrollTrigger: {
                    trigger: card,
                    start: "top 80%",
                    toggleActions: "play none none reverse",
                },
                scale: 0.8,
                opacity: 0,
                rotateY: 180,
                duration: 1,
                delay: index * 0.2,
                ease: "back.out(1.7)",
            });
        });

        // View certificate button interaction
        const viewButtons = document.querySelectorAll(".view-cert-btn");
        viewButtons.forEach((btn) => {
            btn.addEventListener("click", () => {
                // Add your certificate modal/view logic here
                gsap.to(btn, {
                    scale: 0.9,
                    duration: 0.1,
                    yoyo: true,
                    repeat: 1,
                });
            });
        });
    });
</script>

<style>
    .certificates-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
        gap: 3rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .certificate-card,
    .certificate-placeholder {
        padding: 3rem;
        position: relative;
        overflow: hidden;
        transition: all 0.3s ease;
        text-align: center;
    }

    .certificate-card:hover {
        transform: translateY(-10px) scale(1.02);
        box-shadow: 0 30px 60px rgba(0, 212, 255, 0.3);
    }

    .cert-decoration {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 10px;
        background: linear-gradient(90deg, #00d4ff, #9d4edd, #00d4ff);
        background-size: 200% 100%;
        animation: gradient-move 3s linear infinite;
    }

    @keyframes gradient-move {
        0% {
            background-position: 0% 50%;
        }
        100% {
            background-position: 200% 50%;
        }
    }

    .cert-icon {
        margin: 2rem 0;
        filter: drop-shadow(0 0 20px rgba(0, 212, 255, 0.5));
    }

    .cert-shine {
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: linear-gradient(
            45deg,
            transparent,
            rgba(255, 255, 255, 0.1),
            transparent
        );
        transform: rotate(45deg);
        animation: shine 3s infinite;
    }

    @keyframes shine {
        0% {
            transform: translateX(-100%) translateY(-100%) rotate(45deg);
        }
        100% {
            transform: translateX(100%) translateY(100%) rotate(45deg);
        }
    }

    .certificate-placeholder {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 400px;
        border: 2px dashed rgba(255, 255, 255, 0.2);
        opacity: 0.6;
    }

    .placeholder-icon {
        opacity: 0.5;
    }

    @media (max-width: 768px) {
        .certificates-grid {
            grid-template-columns: 1fr;
        }
    }

    /* Custom Shape Divider */
    .custom-shape-divider-bottom {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        overflow: hidden;
        line-height: 0;
        transform: rotate(180deg);
        z-index: -2;
    }

    .custom-shape-divider-bottom svg {
        position: relative;
        display: block;
        width: calc(100% + 1.3px);
        height: 60px;
    }

    .custom-shape-divider-bottom .shape-fill {
        fill: #1e293b; /* Match Interests section background */
        opacity: 1;
    }
</style>
