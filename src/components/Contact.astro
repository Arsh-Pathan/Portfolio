---
// Contact Section
---

<section id="contact" class="section py-20">
    <div class="container max-w-6xl mx-auto px-6">
        <h2
            class="section-title text-center mb-16 text-4xl font-bold gradient-text"
        >
            Get In Touch
        </h2>

        <div class="contact-container grid md:grid-cols-2 gap-12 items-start">
            <!-- Left: Contact Info -->
            <div
                class="contact-info glass p-8 rounded-2xl shadow-lg backdrop-blur-md border border-cream-dark"
            >
                <h3 class="text-2xl font-bold mb-8 gradient-text">
                    Contact Information
                </h3>

                <!-- Email -->
                <div class="info-item flex items-center gap-4 mb-6">
                    <div class="icon-box">
                        <span class="text-2xl">ðŸ“§</span>
                    </div>
                    <div>
                        <p class="text-sm text-text-muted">Email</p>
                        <a
                            href="mailto:mail.arsh.pathan@gmail.com"
                            class="text-lg font-medium hover:text-accent-gold transition-colors"
                        >
                            mail.arsh.pathan@gmail.com
                        </a>
                    </div>
                </div>

                <!-- Phone -->
                <div class="info-item flex items-center gap-4 mb-8">
                    <div class="icon-box">
                        <span class="text-2xl">ðŸ“±</span>
                    </div>
                    <div>
                        <p class="text-sm text-text-muted">Phone</p>
                        <a
                            href="tel:+919923836512"
                            class="text-lg font-medium hover:text-accent-gold transition-colors"
                        >
                            +91 9923836512
                        </a>
                    </div>
                </div>

                <!-- Socials -->
                <div class="social-links mt-10">
                    <h4 class="text-lg font-semibold mb-4">Follow Me</h4>
                    <div class="flex gap-5">
                        <a
                            href="https://github.com"
                            target="_blank"
                            class="social-btn"
                            aria-label="GitHub"
                        >
                            <svg
                                class="w-6 h-6"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385..."
                                ></path>
                            </svg>
                        </a>

                        <a
                            href="https://linkedin.com"
                            target="_blank"
                            class="social-btn"
                            aria-label="LinkedIn"
                        >
                            <svg
                                class="w-6 h-6"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path d="M19 0h-14c-2.761 0-5..."></path>
                            </svg>
                        </a>

                        <a href="#" class="social-btn" aria-label="Discord">
                            <svg
                                class="w-6 h-6"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path d="M20.317 4.37a19.791..."></path>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Right: Form -->
            <div
                class="contact-form-wrapper glass p-8 rounded-2xl shadow-lg backdrop-blur-md border border-cream-dark"
            >
                <h3 class="text-2xl font-bold mb-8 gradient-text">
                    Send a Message
                </h3>

                <form id="contact-form" class="space-y-6">
                    <div>
                        <label
                            for="name"
                            class="block text-sm font-medium text-text-muted mb-2"
                            >Name</label
                        >
                        <input
                            type="text"
                            id="name"
                            name="user_name"
                            required
                            class="w-full bg-white/10 border border-cream-dark rounded-lg px-4 py-3 text-text-main focus:outline-none focus:border-accent-gold transition-colors"
                            placeholder="Your Name"
                        />
                    </div>

                    <div>
                        <label
                            for="email"
                            class="block text-sm font-medium text-text-muted mb-2"
                            >Email</label
                        >
                        <input
                            type="email"
                            id="email"
                            name="user_email"
                            required
                            class="w-full bg-white/10 border border-cream-dark rounded-lg px-4 py-3 text-text-main focus:outline-none focus:border-accent-gold transition-colors"
                            placeholder="your.email@example.com"
                        />
                    </div>

                    <div>
                        <label
                            for="message"
                            class="block text-sm font-medium text-text-muted mb-2"
                            >Message</label
                        >
                        <textarea
                            id="message"
                            name="message"
                            rows="4"
                            required
                            class="w-full bg-white/10 border border-cream-dark rounded-lg px-4 py-3 text-text-main focus:outline-none focus:border-accent-gold transition-colors resize-none"
                            placeholder="Your message..."></textarea>
                    </div>

                    <button
                        type="submit"
                        class="btn btn-primary w-full flex items-center justify-center gap-2 group bg-accent-gold text-white font-medium py-3 rounded-lg hover:bg-accent-gold/90 transition-all shadow-md"
                    >
                        <span>Send Message</span>
                        <svg
                            class="w-5 h-5 group-hover:translate-x-1 transition-transform"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                        </svg>
                    </button>

                    <div id="form-status" class="hidden text-center mt-4"></div>
                </form>
            </div>
        </div>
    </div>

    <style>
        .icon-box {
            width: 50px;
            height: 50px;
            background: rgba(212, 175, 55, 0.1);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #d4af37;
        }

        .social-btn {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.08);
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
            color: #d4af37;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .social-btn:hover {
            background: #d4af37;
            color: #fff;
            transform: translateY(-4px);
            box-shadow: 0 5px 15px rgba(212, 175, 55, 0.3);
        }

        .glass {
            background: rgba(255, 255, 255, 0.05);
        }

        @media (max-width: 768px) {
            .contact-container {
                grid-template-columns: 1fr;
            }
        }
    </style>
</section>
