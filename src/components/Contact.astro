<section id="contact" class="section contact-section relative overflow-hidden">
  <div class="container max-w-6xl mx-auto px-6 relative z-10">
    <div class="text-center mb-16">
      <div class="section-label justify-center flex">Connect</div>
      <h2 class="section-title">
        Get In <span class="gradient-text">Touch</span>
      </h2>
    </div>

    <div class="contact-grid">
      <!-- Left: Contact Info -->
      <div class="contact-info glass">
        <h3 class="info-heading gradient-text">Contact Information</h3>

        <div class="info-item">
          <div class="info-icon-box">
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path></svg
            >
          </div>
          <div>
            <p class="info-label">Email</p>
            <a href="mailto:mail.arsh.pathan@gmail.com" class="info-value"
              >mail.arsh.pathan@gmail.com</a
            >
          </div>
        </div>

        <div class="info-item">
          <div class="info-icon-box">
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path></svg
            >
          </div>
          <div>
            <p class="info-label">Phone</p>
            <a href="tel:+919923836512" class="info-value">+91 9923836512</a>
          </div>
        </div>

        <div class="social-section">
          <h4 class="social-heading">Follow Me</h4>
          <div class="social-links">
            <a
              href="https://github.com"
              target="_blank"
              class="social-btn"
              aria-label="GitHub"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"
