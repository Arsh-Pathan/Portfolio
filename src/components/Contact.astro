                    <form id="contact-form" class="space-y-6">
                        <div class="form-group">
                            <label
                                for="name"
                                class="block text-sm font-medium text-text-muted mb-2"
                                >Name</label
                            >
                            <input
                                type="text"
                                id="name"
                                name="user_name"
                                required
                                class="w-full bg-white border border-cream-dark rounded-lg px-4 py-3 text-text-main focus:outline-none focus:border-accent-gold transition-colors"
