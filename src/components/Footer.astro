---
const currentYear = new Date().getFullYear();
---

<canvas id="space-background"></canvas>

<div id="page-content">
  <footer class="footer-section relative z-10">
    <div class="footer-container">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-14 items-start">
        <!-- Brand -->
        <div>
          <a
            href="#home"
            class="footer-logo flex items-center gap-2 mb-5 group"
          >
            <span
              class="w-9 h-9 rounded-lg bg-gradient-to-br from-blue-500 to-cyan-500 flex items-center justify-center text-xs font-black text-white shadow-lg shadow-blue-500/20"
              >AP</span
            >
            <span class="text-xl font-bold text-white font-outfit"
              >Arsh<span class="gradient-text">.</span></span
            >
          </a>
          <p class="text-gray-500 leading-relaxed mb-6 text-sm">
            Crafting digital experiences with code and creativity. Let's build
            something amazing together.
          </p>
          <div class="flex gap-3">
            <a
              href="https://github.com/Arsh-Pathan"
              target="_blank"
              aria-label="GitHub"
              class="footer-social"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"
                ><path
                  d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"
                ></path></svg
              >
            </a>
            <a
              href="https://linkedin.com/Arsh-Pathan"
              target="_blank"
              aria-label="LinkedIn"
              class="footer-social"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"
                ><path
                  d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                ></path></svg
              >
            </a>
            <a
              href="mailto:mail.arsh.pathan@gmail.com"
              aria-label="Email"
              class="footer-social"
            >
              <svg
                class="w-4 h-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                ><path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path></svg
              >
            </a>
          </div>
        </div>

        <!-- Explore Links -->
        <div>
          <h4 class="footer-section-title">Explore</h4>
          <ul class="footer-links">
            <li><a href="#home" class="footer-link">Home</a></li>
            <li><a href="#skills" class="footer-link">Skills</a></li>
            <li><a href="#projects" class="footer-link">Projects</a></li>
            <li><a href="#education" class="footer-link">Education</a></li>
          </ul>
        </div>

        <!-- Get in Touch -->
        <div>
          <h4 class="footer-section-title">Get in Touch</h4>
          <p class="text-gray-500 mb-5 text-sm">
            Have a project in mind? I'd love to hear from you.
          </p>
          <a href="#contact" class="btn btn-outline text-sm py-2 px-6"
            >Say Hello</a
          >
        </div>
      </div>

      <!-- Bottom bar -->
      <div class="footer-bottom">
        <p class="text-gray-600 text-sm">
          &copy; {currentYear} Arsh Pathan. All rights reserved.
        </p>
        <p class="text-gray-600 text-sm flex items-center gap-1">
          Designed with <span class="text-red-500 animate-pulse">❤️</span>
        </p>
      </div>
    </div>

    <!-- Scroll to top -->
    <button
      id="scroll-to-top"
      class="fixed bottom-8 right-8 w-11 h-11 rounded-full flex items-center justify-center text-white opacity-0 invisible transition-all duration-300 hover:-translate-y-1 z-50 scroll-top-btn"
      aria-label="Scroll to top"
    >
      <svg
        class="w-5 h-5"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
      </svg>
    </button>

    <script>
      const scrollBtn = document.getElementById("scroll-to-top");
      if (scrollBtn) {
        window.addEventListener("scroll", () => {
          if (window.scrollY > 500) {
            scrollBtn.classList.remove("opacity-0", "invisible");
          } else {
            scrollBtn.classList.add("opacity-0", "invisible");
          }
        });
        scrollBtn.addEventListener("click", () => {
          window.scrollTo({ top: 0, behavior: "smooth" });
        });
      }
    </script>
  </footer>

  <style>
    .footer-section {
      background: linear-gradient(180deg, #0a0f1c, #060a14);
      border-top: 1px solid rgba(59, 130, 246, 0.06);
    }
    .footer-container {
      max-width: 1200px; /* match your page layout width */
      margin: 0 auto;
      padding: 80px 24px 60px;
    }

    .footer-section {
      background: linear-gradient(
        to bottom,
        rgba(10, 15, 28, 0) 0%,
        #0a0f1c 20%,
        #060a14 100%
      );
      border-top: 1px solid rgba(59, 130, 246, 0.06);
    }

    .footer-section-title {
      font-weight: 700;
      font-size: 1rem;
      color: #e8edf5;
      margin-bottom: 1.25rem;
    }

    .footer-links {
      list-style: none;
      display: flex;
      flex-direction: column;
      gap: 0.6rem;
    }

    .footer-link {
      color: #5a6d8a;
      text-decoration: none;
      font-size: 0.9rem;
      transition: all 0.3s ease;
      display: inline-block;
    }

    .footer-link:hover {
      color: #60a5fa;
      transform: translateX(5px);
    }

    .footer-social {
      width: 36px;
      height: 36px;
      border-radius: 50%;
      background: rgba(59, 130, 246, 0.08);
      display: flex;
      align-items: center;
      justify-content: center;
      color: #5a6d8a;
      border: 1px solid rgba(59, 130, 246, 0.1);
      transition: all 0.3s ease;
    }

    .footer-social:hover {
      background: #3b82f6;
      color: white;
      transform: translateY(-3px);
      box-shadow: 0 5px 20px rgba(59, 130, 246, 0.3);
      border-color: transparent;
    }

    .footer-bottom {
      border-top: 1px solid rgba(59, 130, 246, 0.06);
      margin-top: 60px;
      padding-top: 28px;

      display: flex;
      flex-wrap: wrap;
      gap: 12px;

      align-items: center;
      justify-content: space-between;
    }

    .footer-bottom p {
      line-height: 1.6;
    }

    @media (min-width: 768px) {
      .footer-bottom {
        flex-direction: row;
        justify-content: space-between;
      }
    }

    .scroll-top-btn {
      background: linear-gradient(135deg, #3b82f6, #2563eb);
      box-shadow: 0 4px 20px rgba(59, 130, 246, 0.3);
    }

    .scroll-top-btn:hover {
      box-shadow: 0 8px 30px rgba(59, 130, 246, 0.5);
    }
  </style>
</div>
