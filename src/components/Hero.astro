<section
    id="home"
    class="section relative overflow-hidden select-none"
    style="min-height: 120vh;"
>
    <div
        class="container z-10 flex items-center justify-center"
        style="min-height: 100vh; margin-top: -10vh;"
    >
        <div
            class="flex flex-col md:flex-row items-center justify-center w-full gap-12 md:gap-20"
        >
            <div class="profile-picture-wrapper" id="profile-pic">
                <div class="profile-picture">
                    <img
                        src="/profile.jpg"
                        alt="Arsh Pathan"
                        class="w-full h-full object-cover"
                    />
                </div>
            </div>

            <div class="text-content text-center md:text-left">
                <h1
                    class="hero-name mb-4 flex flex-col justify-center md:items-start items-center"
                    id="hero-name"
                >
                    <span
                        class="text-2xl md:text-4xl text-text-muted font-medium mb-2"
                        id="hero-greeting">Hi, I am</span
                    >
                    <div class="relative w-fit" id="name-container">
                        <span
                            class="text-6xl md:text-8xl font-black tracking-tight text-text-main"
                            id="typewriter-name">ARSH PATHAN</span
                        >
                    </div>
                </h1>

                <div
                    class="subtitle-wrapper mb-8 h-8 md:h-12 flex items-center justify-center md:justify-start"
                    id="role-container"
                >
                    <span
                        class="text-xl md:text-3xl text-text-muted font-bold mr-2 opacity-0"
                        id="role-prefix">I am</span
                    >
                    <span
                        class="text-xl md:text-3xl text-accent-gold font-bold"
                        id="typewriter-role"></span>
                    <span
                        class="cursor-role h-6 md:h-10 w-0.5 md:w-1 bg-accent-gold ml-1"
                        id="cursor-role"></span>
                </div>

                <div
                    class="flex gap-4 flex-wrap justify-center md:justify-start"
                    id="hero-cta"
                >
                    <a href="#contact" class="btn btn-primary">
                        Get In Touch
                    </a>
                    <a href="#projects" class="btn btn-outline">
                        View Projects
                    </a>
                </div>
            </div>
        </div>

        <div
            class="scroll-indicator absolute bottom-10 left-1/2 -translate-x-1/2"
        >
            <div class="scroll-arrow"></div>
        </div>
    </div>

    <div class="custom-shape-divider-bottom">
        <svg
            data-name="Layer 1"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 1200 120"
            preserveAspectRatio="none"
        >
            <path
                d="M985.66,92.83C906.67,72,823.78,31,743.84,14.19
                c-82.26-17.34-168.06-16.33-250.45.39
                -57.84,11.73-114,31.07-172,41.86
                A600.21,600.21,0,0,1,0,27.35V120H1200
                V95.8C1132.19,118.92,1055.71,111.31,
                985.66,92.83Z"
                class="shape-fill"></path>
        </svg>
    </div>
</section>

<script>
    import { gsap } from "gsap";

    const nameText = "ARSH PATHAN";
    const roles = [
        "A Developer",
        "A Student",
        "A Creator",
        "A Tech Enthusiast",
    ];

    const addHangFallToElement = (element: HTMLElement) => {
        if (!element) return;

        element.style.cursor = "pointer";
        element.style.display = "inline-block";
        let state = 0;

        element.addEventListener("click", () => {
            if (state === 0) {
                gsap.to(element, {
                    rotation: Math.random() < 0.5 ? 15 : -15,
                    y: 5,
                    transformOrigin: "top left",
                    duration: 1.5,
                    ease: "elastic.out(1, 0.4)",
                });
                state = 1;
            } else if (state === 1) {
                gsap.to(element, {
                    y: 600,
                    rotation: Math.random() * 180 - 90,
                    opacity: 0,
                    duration: 1,
                    ease: "power2.in",
                    onComplete: () => {
                        setTimeout(
                            () => {
                                gsap.set(element, {
                                    y: 0,
                                    rotation: 0,
                                    opacity: 1,
                                    scale: 1,
                                });
                                state = 0;
                            },
                            2000 + Math.random() * 1000,
                        );
                    },
                });
                state = 2;
            }
        });
    };

    const typeEffect = (
        elementId: string,
        text: string,
        speed: number = 100,
    ) => {
        return new Promise((resolve) => {
            const element = document.getElementById(elementId);
            if (!element) return resolve(null);

            let i = 0;
            element.innerText = "";

            const typeChar = () => {
                if (i < text.length) {
                    const char = text.charAt(i);
                    const span = document.createElement("span");

                    if (char === " ") {
                        span.innerHTML = "&nbsp;";
                    } else {
                        span.innerText = char;
                        addHangFallToElement(span);
                    }

                    element.appendChild(span);
                    i++;
                    setTimeout(typeChar, speed);
                } else {
                    resolve(null);
                }
            };
            typeChar();
        });
    };

    const deleteEffect = (elementId: string, speed: number = 50) => {
        return new Promise((resolve) => {
            const element = document.getElementById(elementId);
            if (!element) return resolve(null);

            const deleteChar = () => {
                if (element.lastChild) {
                    element.removeChild(element.lastChild);
                    setTimeout(deleteChar, speed);
                } else {
                    resolve(null);
                }
            };
            deleteChar();
        });
    };

    const startTypingRoles = async () => {
        let roleIndex = 0;
        while (true) {
            const currentRole = roles[roleIndex];
            await typeEffect("typewriter-role", currentRole, 100);
            await new Promise((r) => setTimeout(r, 2000));
            await deleteEffect("typewriter-role", 50);
            await new Promise((r) => setTimeout(r, 500));
            roleIndex = (roleIndex + 1) % roles.length;
        }
    };

    const makeTextInteractive = (elementId: string) => {
        const element = document.getElementById(elementId);
        if (!element) return;

        const text = element.innerText;
        element.innerText = "";

        text.split("").forEach((char) => {
            const span = document.createElement("span");
            if (char === " ") {
                span.innerHTML = "&nbsp;";
            } else {
                span.innerText = char;
                addHangFallToElement(span);
            }
            element.appendChild(span);
        });
    };

    document.addEventListener("DOMContentLoaded", () => {
        gsap.from("#profile-pic", {
            x: -100,
            opacity: 0,
            duration: 1,
            ease: "power3.out",
        });

        gsap.to("#hero-greeting", { opacity: 1, duration: 0.8, delay: 0.2 });
        gsap.to("#role-prefix", { opacity: 1, duration: 0, delay: 0 });

        makeTextInteractive("typewriter-name");

        startTypingRoles();

        gsap.from("#hero-cta", {
            y: 50,
            opacity: 0,
            duration: 1,
            delay: 1,
            ease: "power3.out",
        });
    });
</script>

<style>
    .profile-picture-wrapper {
        position: relative;
        width: 300px;
        height: 300px;
        flex-shrink: 0;
    }

    @media (max-width: 768px) {
        .profile-picture-wrapper {
            width: 250px;
            height: 250px;
        }
    }

    @media (max-width: 480px) {
        .profile-picture-wrapper {
            width: 200px;
            height: 200px;
        }
    }

    .profile-picture {
        position: relative;
        width: 100%;
        height: 100%;
        border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
        overflow: hidden;
        border: 4px solid #ffffff;
        background: #f5f0e6;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        animation: morph 8s ease-in-out infinite;
    }

    @keyframes morph {
        0% {
            border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
        }
        50% {
            border-radius: 30% 60% 70% 40% / 50% 60% 30% 60%;
        }
        100% {
            border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
        }
    }

    .scroll-indicator {
        padding-bottom: 100px;
        animation: bounce 2s infinite;
        z-index: 20;
    }

    .scroll-arrow {
        width: 24px;
        height: 24px;
        border-left: 2px solid #2c3e50;
        border-bottom: 2px solid #2c3e50;
        transform: rotate(-45deg);
    }

    @keyframes bounce {
        0%,
        20%,
        50%,
        80%,
        100% {
            transform: translateY(0);
        }
        40% {
            transform: translateY(10px);
        }
        60% {
            transform: translateY(5px);
        }
    }

    .custom-shape-divider-bottom {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        overflow: hidden;
        line-height: 0;
        z-index: -2;
    }

    .custom-shape-divider-bottom svg {
        position: relative;
        display: block;
        width: calc(100% + 1.3px);
        height: 60px;
    }

    .custom-shape-divider-bottom .shape-fill {
        fill: #1e293b;
    }

    @keyframes blink {
        0%,
        100% {
            opacity: 1;
        }
        50% {
            opacity: 0;
        }
    }

    .cursor-main,
    .cursor-role {
        animation: blink 1s step-end infinite;
    }
</style>
