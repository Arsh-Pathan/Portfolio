<section
  id="home"
  class="section relative overflow-hidden select-none"
  style="min-height: 120vh;"
>
  <div class="dev-badge-corner">
    <span class="pulse-dot"></span>
    Portfolio Under Development
  </div>
  <div
    class="container z-10 flex items-center justify-center"
    style="min-height: 100vh; margin-top: -10vh;"
  >
    <div class="background-symbols">
      <span class="symbol top-left cream">&#123;</span>
      <span class="symbol top-right cream">&#125;</span>
    </div>

    <div
      class="flex flex-col md:flex-row items-center justify-center w-full gap-12 md:gap-20"
    >
      <div class="profile-picture-wrapper" id="profile-pic">
        <div class="profile-picture">
          <img
            src="/profile.jpg"
            alt="Arsh Pathan"
            class="w-full h-full object-cover"
          />
        </div>
      </div>

      <div class="text-content text-center md:text-left">
        <h1
          class="hero-name mb-4 flex flex-col justify-center md:items-start items-center"
          id="hero-name"
        >
          <span
            class="text-2xl md:text-4xl text-text-muted font-medium mb-2"
            id="hero-greeting">Hi, I am</span
          >
          <div class="relative w-fit" id="name-container">
            <span
              class="text-6xl md:text-8xl font-black tracking-tight text-text-main"
              id="typewriter-name">ARSH PATHAN</span
            >
          </div>
        </h1>

        <div
          class="subtitle-wrapper mb-8 h-8 md:h-12 flex items-center justify-center md:justify-start"
          id="role-container"
        >
          <span
            class="text-xl md:text-3xl text-text-muted font-bold mr-2 opacity-0"
            id="role-prefix">I am</span
          >
          <span
            class="text-xl md:text-3xl text-accent-gold font-bold"
            id="typewriter-role"></span>
          <span
            class="cursor-role h-6 md:h-10 w-0.5 md:w-1 bg-accent-gold ml-1"
            id="cursor-role"></span>
        </div>

        <div
          class="flex gap-4 flex-wrap justify-center md:justify-start"
          id="hero-cta"
        >
          <a href="#contact" class="btn btn-primary"> Get In Touch </a>
          <a href="#projects" class="btn btn-outline"> View Projects </a>
        </div>
      </div>
    </div>

    <div class="scroll-indicator absolute bottom-10 left-1/2 -translate-x-1/2">
      <div class="scroll-arrow"></div>
    </div>
  </div>
</section>

<script>
    import { gsap } from "gsap";
    const roles = [
        "A Developer",
        "A Student",
        "A Creator",
        "Founder of CSky Developments",
        "An AI Orchestration Developer",
        "A Problem Solver",
        "A Tech Enthusiast",
        "A Full-Stack Developer",
        "A Web Architect",
        "An Automation Builder",
        "An Open Source Contributor",
        "A Software Engineer",
        "A UI/UX Explorer",
        "A Startup Builder",
        "A System Designer",
        "A Backend Engineer",
        "A Frontend Craftsman",
        "A Debugging Ninja",
        "A Lifelong Learner",
        "A Performance Optimizer",
        "A Cloud Explorer",
        "A Code Simplifier",
        "A Digital Innovator"
    ];

  const addHangFallToElement = (element: HTMLElement) => {
      if (!element) return;

      element.style.cursor = "pointer";
      element.style.display = "inline-block";
      let state = 0;

      element.addEventListener("click", () => {
          if (state === 0) {
              gsap.to(element, {
                  rotation: Math.random() < 0.5 ? 15 : -15,
                  y: 5,
                  transformOrigin: "top left",
                  duration: 1.5,
                  ease: "elastic.out(1, 0.4)",
              });
              state = 1;
          } else if (state === 1) {
              gsap.to(element, {
                  y: 600,
                  rotation: Math.random() * 180 - 90,
                  opacity: 0,
                  duration: 1,
                  ease: "power2.in",
                  onComplete: () => {
                      setTimeout(
                          () => {
                              gsap.set(element, {
                                  y: 0,
                                  rotation: 0,
                                  opacity: 1,
                                  scale: 1,
                              });
                              state = 0;
                          },
                          2000 + Math.random() * 1000,
                      );
                  },
              });
              state = 2;
          }
      });
  };

  const typeEffect = (elementId: string, text: string, speed: number = 100) => {
    return new Promise((resolve) => {
      const element = document.getElementById(elementId);
      if (!element) return resolve(null);

      let i = 0;
      element.innerText = "";

      const typeChar = () => {
        if (i < text.length) {
          const char = text.charAt(i);
          const span = document.createElement("span");

          if (char === " ") {
            span.innerHTML = "&nbsp;";
          } else {
            span.innerText = char;
            addHangFallToElement(span);
          }

          element.appendChild(span);
          i++;
          setTimeout(typeChar, speed);
        } else {
          resolve(null);
        }
      };
      typeChar();
    });
  };

  const deleteEffect = (elementId: string, speed: number = 50) => {
    return new Promise((resolve) => {
      const element = document.getElementById(elementId);
      if (!element) return resolve(null);

      const deleteChar = () => {
        if (element.lastChild) {
          element.removeChild(element.lastChild);
          setTimeout(deleteChar, speed);
        } else {
          resolve(null);
        }
      };
      deleteChar();
    });
  };

  const startTypingRoles = async () => {
    let roleIndex = 0;
    while (true) {
      const currentRole = roles[roleIndex];
      await typeEffect("typewriter-role", currentRole, 100);
      await new Promise((r) => setTimeout(r, 2000));
      await deleteEffect("typewriter-role", 50);
      await new Promise((r) => setTimeout(r, 500));
      roleIndex = (roleIndex + 1) % roles.length;
    }
  };

  const makeTextInteractive = (elementId: string) => {
    const element = document.getElementById(elementId);
    if (!element) return;

    const text = element.innerText;
    element.innerText = "";

    text.split("").forEach((char) => {
      const span = document.createElement("span");
      if (char === " ") {
        span.innerHTML = "&nbsp;";
      } else {
        span.innerText = char;
        addHangFallToElement(span);
      }
      element.appendChild(span);
    });
  };

  document.addEventListener("DOMContentLoaded", () => {
    gsap.from("#profile-pic", {
      x: -100,
      opacity: 0,
      duration: 1,
      ease: "power3.out",
    });

    gsap.to("#hero-greeting", { opacity: 1, duration: 0.8, delay: 0.2 });
    gsap.to("#role-prefix", { opacity: 1, duration: 0, delay: 0 });

    makeTextInteractive("typewriter-name");

    startTypingRoles();

    gsap.from("#hero-cta", {
      y: 50,
      opacity: 0,
      duration: 1,
      delay: 1,
      ease: "power3.out",
    });
  });
</script>

<style>
  .profile-picture-wrapper {
    position: relative;
    width: 300px;
    height: 300px;
    flex-shrink: 0;
  }

  @media (max-width: 768px) {
    .profile-picture-wrapper {
      width: 250px;
      height: 250px;
    }
  }

  @media (max-width: 480px) {
    .profile-picture-wrapper {
      width: 200px;
      height: 200px;
    }
  }

  .dev-badge-corner {
    position: absolute;
    top: 24px;
    right: 28px;
    z-index: 50;

    display: flex;
    align-items: center;
    gap: 10px;

    padding: 8px 16px;

    font-size: 14px;
    font-weight: 600;
    letter-spacing: 0.05em;

    color: #7dd3fc;
    background: rgba(56, 189, 248, 0.08);
    border: 1px solid rgba(56, 189, 248, 0.35);

    border-radius: 999px;
    backdrop-filter: blur(10px);

    box-shadow: 0 0 18px rgba(56, 189, 248, 0.15);
  }

  .pulse-dot {
    width: 10px;
    height: 10px;
    background: #38bdf8;
    border-radius: 50%;
    position: relative;
  }

  .pulse-dot::after {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: 50%;
    background: #38bdf8;
    animation: pulse-ring 1.6s infinite;
  }

  @keyframes pulse-ring {
    0% {
      transform: scale(1);
      opacity: 0.9;
    }
    70% {
      transform: scale(2.8);
      opacity: 0;
    }
    100% {
      opacity: 0;
    }
  }

  .dev-badge-corner:hover::before {
    opacity: 1;
    animation: shimmer 1.2s linear;
  }


  @media (max-width: 640px) {
    .dev-badge-corner {
      top: 14px;
      right: 14px;
      font-size: 12px;
      padding: 6px 12px;
    }
  }

  .profile-picture {
    position: relative;
    width: 100%;
    height: 100%;
    border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
    overflow: hidden;
    border: 4px solid #ffffff;
    background: #f5f0e6;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    animation: morph 8s ease-in-out infinite;
  }

  @keyframes morph {
    0% {
      border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
    }
    50% {
      border-radius: 30% 60% 70% 40% / 50% 60% 30% 60%;
    }
    100% {
      border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
    }
  }

  .scroll-indicator {
    padding-bottom: 100px;
    animation: bounce 2s infinite;
    z-index: 20;
  }

  .scroll-arrow {
    width: 24px;
    height: 24px;
    border-left: 2px solid #2c3e50;
    border-bottom: 2px solid #2c3e50;
    transform: rotate(-45deg);
  }

  @keyframes bounce {
    0%,
    20%,
    50%,
    80%,
    100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(10px);
    }
    60% {
      transform: translateY(5px);
    }
  }

  .background-symbols {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    pointer-events: none;
    overflow: hidden;
  }

  .cream {
    color: rgba(95, 153, 223, 0.25);
  }

  .symbol {
    position: absolute;
    font-family: "Outfit", monospace;
    font-weight: 700;
    font-size: 15rem;
    line-height: 1;
    user-select: none;
    filter: none;
    animation: float 6s ease-in-out infinite;
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  @media (max-width: 1024px) {
    .symbol {
      font-size: 10rem;
    }

    .top-right {
      top: 15rem;
    }

    .bottom-left,
    .bottom-right {
      bottom: 40rem;
      left: auto;
      right: auto;
    }

    .bottom-left {
      left: 10rem;
    }

    .bottom-right {
      right: 10rem;
    }
  }

  @media (max-width: 768px) {
    .symbol {
      font-size: 6rem;
    }

    .top-left {
      top: 1rem;
      left: 1rem;
    }

    .top-right {
      top: 10rem;
      right: 1rem;
    }

    .bottom-left {
      bottom: 20rem;
      left: 2rem;
    }

    .bottom-right {
      bottom: 10rem;
      right: 2rem;
    }
  }

  .top-left {
    top: 2rem;
    left: 2rem;
  }

  .top-right {
    top: 25rem;
    right: 2rem;
  }

  .bottom-left {
    bottom: 62rem;
    left: 30rem;
  }

  .bottom-right {
    bottom: 62rem;
    right: 30rem;
  }

  @keyframes float {
    0% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px);
    }
    100% {
      transform: translateY(0px);
    }
  }

  @keyframes blink {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0;
    }
  }

  .cursor-main,
  .cursor-role {
    animation: blink 1s step-end infinite;
  }

</style>
